<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="MailApp">
  <Id>com.yourdomain.outlookaddin</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Your Name</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Outlook Add-in" />
  <Description DefaultValue="An Outlook Add-in that allows the user to view email metadata and enter explanations and tasks." />
  <IconUrl DefaultValue="~remoteAppUrl/assets/icons/icon-32.png" />
  <HighResolutionIconUrl DefaultValue="~remoteAppUrl/assets/icons/icon-128.png" />
  <SupportUrl DefaultValue="~remoteAppUrl/README.md" />
  <Hosts>
    <Host Name="Mailbox" />
  </Hosts>
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1" />
    </Sets>
  </Requirements>
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="~remoteAppUrl/taskpane/taskpane.html" />
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>
  <Permissions>ReadWriteItem</Permissions>
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read" />
  </Rule>
  <DisableEntityHighlighting>false</DisableEntityHighlighting>
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Requirements>
      <bt:Sets DefaultMinVersion="1.3">
        <bt:Set Name="Mailbox" />
      </bt:Sets>
    </Requirements>
    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <FunctionFile resid="commandsJs" />
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgReadGroup">
                <Label resid="groupLabel" />
                <Control xsi:type="Button" id="msgReadOpenPaneButton">
                  <Label resid="paneButtonLabel" />
                  <Supertip>
                    <Title resid="paneButtonLabel" />
                    <Description resid="paneButtonTooltip" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="icon-16" />
                    <bt:Image size="32" resid="icon-32" />
                    <bt:Image size="80" resid="icon-80" />
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="taskpaneHtml" />
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>
    <Resources>
      <bt:Images>
        <bt:Image id="icon-16" DefaultValue="~remoteAppUrl/assets/icons/icon-16.png" />
        <bt:Image id="icon-32" DefaultValue="~remoteAppUrl/assets/icons/icon-32.png" />
        <bt:Image id="icon-80" DefaultValue="~remoteAppUrl/assets/icons/icon-80.png" />
      </bt:Images>
      <bt:Urls>
        <bt:Url id="commandsJs" DefaultValue="~remoteAppUrl/commands/commands.js" />
        <bt:Url id="taskpaneHtml" DefaultValue="~remoteAppUrl/taskpane/taskpane.html" />
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="groupLabel" DefaultValue="Email Metadata and Tasks" />
        <bt:String id="paneButtonLabel" DefaultValue="Show Email Metadata and Tasks" />
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="paneButtonTooltip" DefaultValue="Click to view email metadata and enter explanations and tasks." />
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>